{
  "name": "qusdtoken",
  "version": "1.0.0",
  "description": "QUSD Token Contracts",
  "main": "truffle-config.js",
  "dependencies": {
    "@openzeppelin/contracts": "^3.4.0"
  },
  "devDependencies": {
    "@openzeppelin/cli": "^2.8.2",
    "@openzeppelin/test-helpers": "^0.5.4",
    "@openzeppelin/truffle-upgrades": "^1.5.0",
    "chai": "^4.3.0",
    "ethlint": "^1.2.5",
    "openzeppelin-test-helpers": "^0.5.1",
    "solc": "0.6.12",
    "solidity-coverage": "^0.7.1",
    "truffle": "5.1.65",
    "truffle-flattener": "^1.5.0",
    "truffle-hdwallet-provider": "^1.0.17"
  },
  "scripts": {
    "compile": "truffle compile",
    "test": "truffle test",
    "generate-abi": "yarn generate-token-abi && yarn generate-issuer-abi",
    "generate-token-abi": "mkdir -p abi-out && solcjs --abi ./contracts/QUSDImplementation.sol -o ./abi-out && cp ./abi-out/__flattened_QUSDImplementation_sol_QUSDImplementation.abi ./QUSD.abi",
    "generate-issuer-abi": "mkdir -p abi-out && solcjs --abi ./flattened/QUSDIssuer.sol -o ./abi-out && cp ./abi-out/__flattened_QUSDIssuer_sol_QUSDIssuer.abi ./QUSDIssuer.abi",
    "flatten": "yarn flatten-token && yarn flatten-issuer",
    "flatten-token": "truffle-flattener ./contracts/QUSDImplementation.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > ./flattened/QUSDImplementation.sol",
    "flatten-issuer": "truffle-flattener ./contracts/QUSDIssuer.sol | awk '/SPDX-License-Identifier/&&c++>0 {next} 1' > ./flattened/QUSDIssuer.sol",
    "lint": "npx ethlint -d ./contracts/ --fix",
    "coverage": "truffle run coverage",
    "migrate": "truffle migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:stablyio/qusd-qtum.git"
  },
  "author": "Stably",
  "license": "UNLICENSED",
  "homepage": ""
}
